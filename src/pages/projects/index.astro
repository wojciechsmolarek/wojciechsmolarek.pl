---
import Base from "../../layouts/Base.astro";

const projects = [
  {
    title: "Projekt strony intenerowej Dev2hola",
    year: 2024,
    description:
      "To responsywna strona internetowa agencji, zajmującej się tworzeniem stron internetowych. Celem było stworzenie przejrzystej i nowoczesnej prezentacji oferty.",
    url: "https://dev2hola.netlify.app/",
  },
];

const title = "Projekty, moje portfolio";
const description = "W moim portfolio znajdziesz projekty, które potwierdzają skuteczność SEO. Dowiedz się, jak buduję widoczność, generuję ruch organiczny, oraz konwertuję użytkowników w klientów.";
---

<Base title={title} description={description}>
  <section>
    <h1 class="mb-8 text-2xl font-medium tracking-tight">Projekty</h1>
    <div class="space-y-6">
      {
        projects.map((project, index) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="block group hover:opacity-80 transition-opacity duration-200">
            <div class="flex flex-col">
              <div class="w-full flex justify-between items-baseline">
                <span class="text-black dark:text-white font-medium tracking-tight">
                  {project.title}
                </span>
                <span class="text-neutral-600 dark:text-neutral-400 tabular-nums text-sm">
                  {project.year}
                </span>
              </div>
              <p class="prose prose-neutral dark:prose-invert pt-3">
                {project.description}
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</Base>
